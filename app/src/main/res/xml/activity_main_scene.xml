<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
       <KeyFrameSet>
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">


        <Constraint
            android:layout_height="@dimen/_44sdp"
            motion:layout_constraintStart_toEndOf="@+id/forwardButtonView"
            motion:layout_constraintBottom_toBottomOf="@id/guidelineExtremeBottom"
            motion:layout_constraintHorizontal_bias="0.666"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="@dimen/_44sdp"
            android:id="@+id/nextButtonView" />
        <Constraint
            android:layout_height="@dimen/_44sdp"
            motion:layout_constraintEnd_toStartOf="@+id/rewindButtonView"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintBottom_toBottomOf="@id/guidelineExtremeBottom"
            motion:layout_constraintHorizontal_bias="0.4"
            android:layout_width="@dimen/_44sdp"
            android:id="@+id/previousButtonView" />
        <Constraint
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toTopOf="@id/guideline5"
            android:layout_width="360dp"
            motion:layout_constraintTop_toBottomOf="@id/AuthorTextView"
            motion:layout_constraintStart_toStartOf="@id/guidelineExtremeOutLeft"
            android:id="@+id/cardSeekBar" />
        <Constraint
            android:layout_height="wrap_content"
            motion:layout_editor_absoluteX="343dp"
            motion:layout_constraintBottom_toTopOf="@+id/cardSeekBar"
            android:layout_width="wrap_content"
            android:id="@+id/textTotalDuration"
            motion:layout_constraintStart_toEndOf="@id/guidelineExtremeOutLeft" />
        <Constraint
            android:id="@+id/textLiveTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toTopOf="@+id/cardSeekBar"
            android:layout_marginStart="32dp"
            motion:layout_constraintStart_toStartOf="@id/guidelineExtremeOutLeft" />
        <Constraint
            android:id="@+id/textLiveTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toTopOf="@+id/cardSeekBar"
            android:layout_marginStart="32dp"
            motion:layout_constraintStart_toStartOf="@id/guidelineExtremeOutLeft" />
        <Constraint
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toTopOf="@id/guideline3"
            motion:layout_constraintBottom_toTopOf="@id/AuthorTextView"
            android:layout_width="wrap_content"
            motion:layout_constraintStart_toStartOf="@id/guidelineExtremeOutLeft"
            android:id="@+id/titleSongs" />
        <Constraint
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            motion:layout_constraintTop_toBottomOf="@id/titleSongs"
            motion:layout_constraintStart_toStartOf="@id/guidelineExtremeOutLeft"
            android:id="@+id/AuthorTextView" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">

    </ConstraintSet>
</MotionScene>